#
# Base OS stuff
#

apt-get update
apt-get -y upgrade
apt-get -y install --no-install-recommends \
                   curl apt-transport-https \
                   python python2.7 perl \
                   software-properties-common gnupg2 jq vim less

#
# Sync Java (Azul Zulu) repository
#

